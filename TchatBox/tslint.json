{
  "extends": [
    "tslint:recommended",
    "tslint-angular"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "align": [
      true,
      "statements",
      "members"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "encoding": true,
    "cyclomatic-complexity": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import |^export |public |private {(.*?)}",
        "check-strings": false,
        "check-regex": false
      }
    ],
    "max-classes-per-file": {
      "severity": "warn"
    },
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "use-isnan": true,
    "no-duplicate-imports": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "new-parens": true,
    "no-unsafe-any": {
      "severity": "warn"
    },
    "no-unsafe-finally": true,
    "static-this": true,
    "unnecessary-else": {
      "severity": "warn"
    },
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-rest-spread"
    ],
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-first",
        "named-imports-order": "lowercase-first"
      }
    ],
    "no-unnecessary-callback-wrapper": true,
    "promise-function-async": true,
    "no-floating-promises": {
      "severity": "warn"
    },
    "await-promise": true,
    "unnecessary-constructor": true,
    "function-constructor": true,
    "no-tautology-expression": true,
    "no-async-without-await": true,
    "no-return-await": true,
    "linebreak-style": [
      true,
      "LF"
    ]
  }
}
